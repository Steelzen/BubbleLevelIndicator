<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="portrait"
        android:background="@drawable/rect_background"
        android:gravity="left"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark" />

    <taehyung.BubbleLevelIndicator.CircularBubble
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/circularbubble"

        />

    <taehyung.BubbleLevelIndicator.SingleBubble
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singlebubble"
        android:layout_below="@+id/circularbubble"
        android:layout_alignParentTop="true"
        />


</RelativeLayout>